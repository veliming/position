/**index.wxss**/

#myMap{
  width:100%;
  height:1000rpx;
}

.repair{
  display: flex;
  flex-direction:row-reverse;
  position: relative;
  width:50px;
  height:50px;
  border-radius: 25px;
  background-color: #fff;
  box-shadow: 0 0 8px #efefef;
}
.repair cover-image{
  width: 25px;
  height: 25px;
  padding: 12.5px 12.5px 0 0;
}
checkbox-group label{
  display: block;
  padding:10px 0;
}
.bottom-btn{
  position: fixed;
  bottom:5%;
  right: 5%;
}
.chooseType{
  font-size: 14px;
}
textarea{
  border:1px solid #eee;
  width:100%;
  color:#000;
  font-size:14px;
}
.guideText{
  margin:20px;
  width:85%;
  font-size: 12px;
}
.guideText text{
  color:#000;
  display: block;
}
.itemText{
  text-indent: 1rem;
}
.itemTip{
  padding-top: 10px;
}
.bottom-btn-clear{
  position: fixed;
  bottom:5%;
  left: 5%;
}